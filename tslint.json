{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rules": {
    "array-bracket-spacing": [true, "never"],
    "forin": false,
    "interface-name": false,
    "max-classes-per-file": false,
    "member-access": false,
    "no-any": true,
    "no-console": false,
    "no-empty": false,
    "no-unused-expression": true,
    "no-shadowed-variable": false,
    "no-string-throw": false,
    "object-curly-spacing": true,
    "object-literal-sort-keys": false,
    "quotemark": [true, "single"],
    "semicolon": [true, "never"],
    "typedef": {
      "options": [
        "call-signature",
        "parameter",
        "arrow-parameter",
        "property-declaration",
        "member-variable-declaration"
      ],
      "severity": "error"
    },
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  }
}